<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#e0f7fa">

    <ImageView
        android:id="@+id/passwordreset_sunPicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/sun" />

    <TextView
        android:id="@+id/passwordreset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD RESET"
        style="@style/title"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/passwordreset_keyPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/key"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/passwordreset_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the email address associated with your Sunsmart Family account"
        style="@style/text2"
        android:gravity="center"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/passwordreset_hintText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email - Required"
        style="@style/text1"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/passwordreset_emailEditText"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/passwordreset_hintText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Instructions"
        style="@style/text1"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/passwordreset_sendButton"
        android:text="send"
        style="@style/button1"
        android:background="@drawable/button_style1"
        android:layout_marginTop="10dp"/>
</LinearLayout>